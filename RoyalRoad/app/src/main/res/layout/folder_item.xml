<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/OpenFolderBTN"
        android:layout_width="165dp"
        android:layout_height="125dp"
        android:backgroundTint="#677EAC"
        android:insetTop="0dp"
        android:insetBottom="0dp" />

    <Button
        android:id="@+id/DotsBTN"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_alignRight="@id/OpenFolderBTN"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@color/Invis"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:translationZ="90dp"
        app:icon="@drawable/vert_dots"
        app:iconPadding="0dp" />

    <ImageView
        android:id="@+id/FolderIcon"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@id/FolderName"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:translationZ="90dp"
        app:srcCompat="@drawable/default_cover" />

    <TextView
        android:id="@+id/FolderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/FolderItems"
        android:layout_marginLeft="10dp"
        android:text="Anime Crossovers"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:translationZ="90dp" />

    <TextView
        android:id="@+id/FolderItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/OpenFolderBTN"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="12.5dp"
        android:text="32 Items"
        android:textColor="#FFFFFF"
        android:textSize="11sp"
        android:translationZ="90dp" />

</RelativeLayout>